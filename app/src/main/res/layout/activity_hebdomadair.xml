<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/aa"
    tools:context=".hebdomadair">
    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">
        <TextView
            android:id="@+id/text_view_date"
            android:layout_width="358dp"
            android:layout_height="80dp"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="40dp"
            android:shadowColor="@color/colorWhite"
            android:textColor="@color/colorWhite"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/t"
            app:layout_constraintHorizontal_bias="0.284"
            app:layout_constraintStart_toStartOf="@+id/t"
            app:layout_constraintTop_toBottomOf="@+id/t" />
        <TextView
            android:layout_marginLeft="120dp"
            android:layout_marginRight="30dp"
            android:id="@+id/logo"
            android:layout_marginTop="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hebdomadaire"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25sp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.13" />

        <EditText
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="60dp"
            android:id="@+id/TempHEB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Température (J)"
            android:inputType="number"/>
        <EditText
            android:id="@+id/waterHEB"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:hint="quantité d'eau  (L)"
            />

        <Spinner
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:id="@+id/spinnerHEB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnHEB"
            android:layout_marginTop="20dp"
            android:layout_width="207dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="95dp"
            android:background="@drawable/btn_bg"
            android:text="Valider" />
    </LinearLayout>
</RelativeLayout>