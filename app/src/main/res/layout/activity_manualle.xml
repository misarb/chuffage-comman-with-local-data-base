<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="475dp"
    android:background="@drawable/bb"
    android:padding="5dp"
    android:layout_gravity="center"
    tools:context=".Manualle">
    <TextView
        android:id="@+id/txtclose"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:textColor="@color/white"
        android:text="X"
        android:textStyle="bold"
        android:layout_gravity="end"
        android:gravity="center"
       />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="39dp"
            android:layout_height="37dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/ic_security" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="Configuration"
            android:textSize="19dp"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="Manuelle"
            android:textSize="19dp"
            android:textColor="@color/white" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="60dp"

        android:layout_height="wrap_content">

        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@color/colorgreen"
            android:gravity="center"

            android:orientation="vertical">


            <TextView
                android:id="@+id/showerTime"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:text="Programmation douche à une heure proche"
                android:textColor="@color/white"
                android:textSize="15sp"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly"
            android:background="@color/green"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp">

            <TextView
                android:id="@+id/showerHour"
                android:layout_width="114dp"
                android:layout_height="87dp"
                android:layout_marginTop="13dp"
                android:text="Programmation douche à une heure ultérieure"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>
        <LinearLayout
            android:background="@color/bluelight"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp">

            <TextView
                android:id="@+id/option"
                android:layout_width="114dp"
                android:layout_height="90dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="13dp"
                android:onClick="ShowPopupOption"
                android:text="Autres propositions"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>


    <Button
        android:id="@+id/btnfollow"
        android:layout_width="207dp"
        android:clickable="false"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/input_bg"
        android:text="Vieulllez choisir une option"
        android:textColor="@color/colorWhite" />

</LinearLayout>